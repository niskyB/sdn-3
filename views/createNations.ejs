<div class="container">
  <div id="modal-js-example" class="modal">
    <div class="modal-background"></div>

    <div class="modal-content container-md" style="max-width: 600px">
      <div class="box">
        <div class="column">
          <h1 class="text-xl font-bold text-black-500">Create Nation</h1>
          <form method="post" style="flex-direction: column; gap: 30px; margin-top: 30px" class="flex gap-10">
            <div>
              <label for="email" class="block mb-2 text-sm font-medium text-gray-700">Name</label>
              <div class="mt-1">
                <input name="name" type="text" placeholder="e.g USA" required
