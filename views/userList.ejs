<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./import.ejs') %>
        <!--  -->
        <title>
            <%= title %>
        </title>
</head>

<body class="flex flex-col min-h-screen justify-evenly">
    <%- include('./header.ejs') %>
        <div class="container">
            <% if(isAuth && isAdmin) { %>
                <div class="px-6 py-10 lg:px-8">
                    <div class="sm:flex sm:items-center">
                        <div class="sm:flex-auto">
                            <h1 class="text-xl font-semibold text-gray-900">Users</h1>
                            <p class="mt-2 text-sm text-gray-700">A list of all the users </p>
                        </div>
                    </div>
                    <div class="flow-root mt-8">
                        <div class="-mx-6 -my-2 overflow-x-auto lg:-mx-8">
                            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                                <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                                    <table class="min-w-full divide-y divide-gray-300">
                                        <thead class="bg-gray-50">
                                            <tr>
                                                <th scope="col"
                                                    class="py-3.5 pl-6 pr-3 text-left text-sm font-semibold text-gray-900">
                                                    Username</th>
                                                <th scope="col"
                                                    class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                                    Name</th>
                                                <th scope="col"
                                                    class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                                    YOB</th>
                                                <th scope="col"
                                                    class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                                    Admin</th>
                                            </tr>
                                        </thead>
                                        <tbody class="bg-white divide-y divide-gray-200">
                                            <% users.forEach(function(user){ %>
                                                <tr>
                                                    <td
                                                        class="py-4 pl-6 pr-3 text-sm font-medium text-gray-900 whitespace-nowrap">
                                                        <%= user.username %>
                                                    </td>
                                                    <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap">
                                                        <%= user.name %>
                                                    </td>
                                                    <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap">
                                                        <%= user.YOB %>
                                                    </td>
                                                    <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap">
                                                        <%= user.isAdmin %>
                                                    </td>
                                                    <td
                                                        class="relative flex gap-5 py-4 pl-3 pr-6 text-sm font-medium text-right whitespace-nowrap">
                                                        <a href="/user/<%=user.id%>"
                                                            class="text-indigo-600 hover:text-indigo-900">View</a>
                                                    </td>
                                                </tr>
                                                <% })%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } else { %>
                    Not Found
                    <%}%>
        </div>
        </div>
        <!-- --------------------------- -->
        <%- include('./footer.ejs') %>
</body>

</html>