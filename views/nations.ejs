<head>
  <%- include('./import.ejs') %>
    <title>
      <%= title %>
    </title>
</head>

<body class="flex flex-col min-h-screen justify-evenly">

  <%- include('./header.ejs') %>
    <div class="px-6 py-10 lg:px-8">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h1 class="text-xl font-semibold text-gray-900">Nations</h1>
          <p class="mt-2 text-sm text-gray-700">A list of all the nations </p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
          <button data-target="modal-js-example"
            class=" js-modal-trigger block rounded-md bg-indigo-600 py-1.5 px-3 text-center text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Add
            Nation</button>
        </div>
      </div>
      <div class="flow-root mt-8">
        <div class="-mx-6 -my-2 overflow-x-auto lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-6 pr-3 text-left text-sm font-semibold text-gray-900">Name</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% nations.forEach(function(nation){ %>
                    <tr>
                      <td class="py-4 pl-6 pr-3 text-sm font-medium text-gray-900 whitespace-nowrap">
                        <%= nation.name %>
                      </td>
                      <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap">
                        <%= nation.description %>
                      </td>
                      <td class="relative flex gap-5 py-4 pl-3 pr-6 text-sm font-medium text-right whitespace-nowrap">
                        <a href="/nations/<%=nation.id%>" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                        <a href="nations/delete/<%=nation.id%>"
                          onclick="return confirm('Are you sure you want to delete this item?')"
                          class="text-red-600 hover:text-red-900">Delete</a>
                      </td>
                    </tr>
                    <% })%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- ----------------------------------------------- -->
    <%- include('./createNations.ejs') %>
      <%- include('./footer.ejs') %>
        <%- include('./script.ejs') %>
</body>

</html>