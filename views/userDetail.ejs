<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./import.ejs') %>
        <!--  -->
        <title>
            <%= title %>
        </title>
</head>

<body class="flex flex-col min-h-screen justify-evenly">
    <%- include('./header.ejs') %>
        <div class="container">
            <% if(isAuth && isAdmin) { %>
                <!-- Tabs -->

                <!-- Description list -->
                <div class="max-w-5xl px-4 mx-auto mt-6 sm:px-6 lg:px-8">
                    <dl class="flex flex-col gap-x-4 gap-y-8 sm:grid-cols-2">
                        <div class="sm:col-span-1">
                            <dt class="text-sm font-medium text-gray-900">Username</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <%=user.username%>
                            </dd>
                        </div>

                        <div class="sm:col-span-1">
                            <dt class="text-sm font-medium text-gray-900">Date of Birth</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <%=user.YOB%>
                            </dd>
                        </div>

                        <div class="sm:col-span-1">
                            <dt class="text-sm font-medium text-gray-900">Admin</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <%= user.isAdmin ? "Yes" : "Nope" %>
                            </dd>
                        </div>
                    </dl>
                </div>
                <% } else { %>
                    Not Found
                    <%}%>
        </div>
        </div>
        <!-- --------------------------- -->
        <%- include('./footer.ejs') %>
</body>

</html>