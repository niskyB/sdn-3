<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./import.ejs') %>
    <title>express</title>
</head>

<body class="flex flex-col min-h-screen justify-evenly">
  <%- include('./header.ejs') %>

    <div class="container">
      <div class="flex flex-col justify-center min-h-full py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
          <h2 class="mt-6 text-3xl font-bold tracking-tight text-center text-gray-900">
            Register
          </h2>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
          <div class="px-4 py-8 bg-white shadow sm:rounded-lg sm:px-10">
            <form class="space-y-6" action="/user/register" method="POST">
              <div>
                <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                <div class="mt-1">
                  <input value="<%=username%>" id="username" name="username" type="text" autocomplete="username"
                    required
                    class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" />
                  <div class="text-xs text-red-500">
                    <%=errors.username%>
                  </div>
                </div>
              </div>
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                <div class="mt-1">
                  <input value="<%=name%>" id="name" name="name" type="text" autocomplete="name" required
                    class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" />
                  <div class="text-xs text-red-500">
                    <%=errors.name%>
                  </div>
                </div>
              </div>
              <div>
                <label for="YOB" class="block text-sm font-medium text-gray-700">Year of birth</label>
                <div class="mt-1">
                  <input value="<%=YOB%>" id="YOB" name="YOB" type="number" min="0" autocomplete="YOB" required
                    class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" />
                  <div class="text-xs text-red-500">
                    <%=errors.YOB%>
                  </div>
                </div>
              </div>

              <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                <div class="mt-1">
                  <input value="<%=password%>" id="password" name="password" type="password" required
                    autocomplete="current-password"
                    class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" />
                  <div class="text-xs text-red-500">
                    <%=errors.password%>
                  </div>
                </div>
                <div class="text-xs text-red-500">
                  <%=errors.msg%>
                </div>
              </div>

              <div>
                <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <div class="mt-1">
                  <input value="<%=confirmPassword%>" id="confirmPassword" name="confirmPassword" type="password"
                    required autocomplete="confirmPassword"
                    class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" />
                  <div class="text-xs text-red-500">
                    <%=errors.confirmPassword%>
                  </div>
                </div>
                <div class="text-xs text-red-500">
                  <%=errors.msg%>
                </div>
              </div>
              <div>
                <button type="submit"
                  class="flex justify-center w-full px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                  Register
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include('./footer.ejs') %>
</body>

</html>