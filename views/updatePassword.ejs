<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./import.ejs') %>
    <title>My profile</title>
</head>

<body class="flex flex-col min-h-screen justify-evenly">
  <%- include('./header.ejs') %>
    <!-- ------------------ -->

    <div class="flex flex-col gap-5 justify-center items-end w-[500px] m-auto py-10">
      <form class="w-full space-y-6" action="/user/me/update-password" method="POST">
        <input type="text" name="username" value="<%=username%>" class="invisible w-0" />
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700">New password</label>
          <div class="mt-1">
            <input value="<%=password%>" id="password" name="password" type="password" required
              autocomplete="current-password"
              class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" />
            <div class="text-xs text-red-500">
              <%=errors.password%>
            </div>
          </div>
          <div class="text-xs text-red-500">
            <%=errors.msg%>
          </div>
        </div>

        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
          <div class="mt-1">
            <input value="<%=confirmPassword%>" id="confirmPassword" name="confirmPassword" type="password" required
              autocomplete="confirmPassword"
              class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" />
            <div class="text-xs text-red-500">
              <%=errors.confirmPassword%>
            </div>
          </div>
          <div class="text-xs text-red-500">
            <%=errors.msg%>
          </div>
        </div>

        <div>
          <button type="submit"
            class="flex justify-center w-full px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            Update
          </button>
        </div>
      </form>
    </div>
    <!-- --------------------------- -->
    <%- include('./footer.ejs') %>
</body>

</html>